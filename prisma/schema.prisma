
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

enum Status {
  ACTIVE
  SUSPENDED
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String 
  role      Role     @default(STUDENT)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
